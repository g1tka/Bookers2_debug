<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50,50) %>
          <!--%= image_tag book.user.get_profile_image, size:'50x50' %>-->
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td>
            <% if book.favorited_by?(current_user) %>
              <!--<p id="on", class="good">-->
              <!--<p class="text-danger">-->
                <%= link_to book_favorite_path(book), method: :delete, style: "color: red;", remote: true do %>
                  ♥<%= book.favorites.count %> <!--いいね-->
                <% end %>
              </p>
            <% else %>
              <!--<p id="off", class="good">-->
              <!--<p class="text-primary">-->
                <%= link_to book_favorite_path(book), method: :post, style: "color: blue;", remote: true do %>
                  ♥<%= book.favorites.count %> <!--いいね-->
                <% end %>
              </p>
            <% end %>
          </td>
          <td>
            <!--% if comment_display %>-->
              <p>コメント数：<%= book.book_comments.count %></p>
            <!--% end %>-->
          </td>

      </tr>
    <% end %>
  </tbody>
</table>